      simp only [biproduct.lift_œÄ, zero_comp]
      have := biproduct.hom_ext_iff.mp (KernelFork.condition s) j
      dsimp at this
      rw [assoc, biproduct.map_œÄ, ‚Üê assoc, zero_comp] at this
